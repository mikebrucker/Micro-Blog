<% user = current_user %>

<h1><%= user.profile.fname%>, Are You Sure You Want To Delete Your Account?</h1>

<form method="POST" action="/delete-account">
    
    <label for="delete_password">Enter Password</label>
    <input type="password" id='delete_password' name="delete_password" />

    <label for="delete_password_confirm">Confirm Your Password</label>
    <input type="password" id='delete_password_confirm' name="delete_password_confirm" />

    <input type="submit">
</form>