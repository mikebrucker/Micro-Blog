<% user = current_user %>
<p><a href='/edit_account'><button>EDIT ACCOUNT</button></a></p>
<p><a href='/delete_account'><button>DELETE ACCOUNT</button></a></p>
<p><%= user.username%></p>
<p><%= user.profile.fname%></p>
<p><%= user.profile.lname%></p>
<p><%= user.profile.email%></p>

<% user.posts.each do |post| %>
    <p><%= "Title: #{post.title}" %></p>
    <p><%= "Body: #{post.body}" %></p>
<% end %>
